name: Publish

on:
  workflow_dispatch:
    inputs:
      version:
        description: 'Application version'
        required: true

jobs:
  publish:
    runs-on: windows-latest

    steps:
    - name: Checkout
      uses: actions/checkout@v2
      with:
        fetch-depth: 0

    - name: Setup MSBuild.exe
      uses: microsoft/setup-msbuild@v1.0.2

    - name: Download NuGet dependencies
      run: dotnet restore SCLOCUA.csproj

    - name: Build and Publish
      run: |
        msbuild SCLOCUA.csproj /p:Configuration=Release /p:Version=${{ github.event.inputs.version }}
        dotnet publish SCLOCUA.csproj -c Release -o publish --self-contained true /p:PublishProfile=FolderProfile.pubxml

    - name: Create zip package
      shell: pwsh
      run: |
        Compress-Archive -Path ./publish/* -DestinationPath ./SCLocalizationUA.zip

    - name: Create Release
      id: create_release
      uses: actions/create-release@v1
      env:
        GITHUB_TOKEN: ${{ secrets.GH_TOKEN }}
      with:
        tag_name: ${{ github.event.inputs.version }}
        release_name: SCLOCUA ${{ github.event.inputs.version }}
        draft: false
        prerelease: true

    - name: Upload Release Asset
      id: upload-release-asset 
      uses: actions/upload-release-asset@v1
      env:
        GITHUB_TOKEN: ${{ secrets.GH_TOKEN }}
      with:
        upload_url: ${{ steps.create_release.outputs.upload_url }}
        asset_path: ./SCLocalizationUA.zip
        asset_name: SCLocalizationUA.zip
        asset_content_type: application/zip
